#include <stdio.h> // Підключаємо бібліотеку

int function(int x, int y) // Створюємо функцію, яка вираховує кількість кроків
{
   if (x == y) // Перевірка, чи значення x дорівнює значенню y
   {
      return 0; // Повертаємо 0, якщо x = y
   }

   int a = 1, b = y - x; // Ініціалізуємо змінні a і b

   while (b > a) // Цикл для обчислення кількості кроків
   {
      if (b <= 2 * a) // Перевірка умови
      {
         b = 0; // Присвоюємо b значення 0
      }
      a++; // Збільшуємо значення a на 1
   }

   return a; // Повертаємо значення a - кількість кроків
}

int main()
{
   int x, y; // Оголошуємо змінні

   printf("Enter x: "); // Виводимо повідомлення для введення x
   scanf("%d", &x); // Зчитуємо значення x з консолі
   printf("Enter y: "); // Виводимо повідомлення для введення y
   scanf("%d", &y); // Зчитуємо значення y з консолі

   printf("\nResult: %d", function(x, y)); // Виводимо результат виклику функції function

   return 0; // Повертаємо 0, щоб позначити успішне завершення програми
}
